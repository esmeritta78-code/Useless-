
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Useless Neon Maze Deluxe</title>
  <style>
    html, body {
      height:100%; margin:0;
      background:#000; display:flex;
      justify-content:center; align-items:center;
      color:#e0e0e0; font-family:'Segoe UI',sans-serif;
    }
    #stage {
      position:relative; width:720px; height:480px;
      background:
        linear-gradient(#0a0f18 1px,transparent 1px),
        linear-gradient(90deg,#0a0f18 1px,transparent 1px),#0f1822;
      background-size:40px 40px;
      box-shadow: inset 0 0 50px #0ff;margin-bottom:20px;
      border-radius:12px;
      overflow:hidden;
    }
    @keyframes gridPulse {
      0%,100% { filter:brightness(120%); }
      50% { filter:brightness(200%); }
    }
    #stage { animation: gridPulse 4s ease-in-out infinite alternate; }
    .player {
      position:absolute;width:14px;height:14px;
      background:radial-gradient(circle,#ff0055,#880022);
      border-radius:50%;
      box-shadow:0 0 12px 4px rgba(255,0,85,0.7);
      transition:transform .3s,opacity .3s;
    }
    @keyframes teleportAnim {
      0% { transform: scale(1); opacity:1;}
      50% { transform: scale(0.2); opacity:0;}
      100% { transform: scale(1); opacity:1;}
    }
    .teleport { animation: teleportAnim 0.4s ease-in; }
    .badge {
      position:absolute;
      top:50%; left:50%;
      transform: translate(-50%,-50%) scale(0);
      background: #0f0;
      color: #000; padding: 8px 16px;
      border-radius: 8px;
      font-size: 20px;
      font-weight: bold;
      text-shadow: none;
    }
    @keyframes badgePop {
      0% { transform: translate(-50%,-50%) scale(0); opacity: 0;}
      50% { transform: translate(-50%,-50%) scale(1.3); opacity: 1;}
      100% { transform: translate(-50%,-50%) scale(1); opacity: 1;}
    }
    .badge.show { animation: badgePop 0.6s ease-out forwards; }
    .hud {
      position:absolute; top:10px; left:10px;
      background:rgba(0,0,0,0.6); padding:6px;
      border-radius:4px; font-size:14px;
    }
  </style>
</head>
<body>
  <div id="stage">
    <div class="hud">Pos: <span id="pos">1,1</span></div>
    <div class="badge" id="badge">Badge!</div>
  </div>
<script>
const TILE=40, COLS=18, ROWS=12;
const stage=document.getElementById('stage');
const posEl=document.getElementById('pos');
const badge=document.getElementById('badge');
let px=1, py=1, cd=0;

const maze = Array.from({length:ROWS}, (_, r) => Array.from({length:COLS}, (_, c) => 
  r===0||c===0||r===ROWS-1||c===COLS-1 ? 1 :
  (r===1&&c===1)?0 : (Math.random()<0.22?1:0)
));

const player=document.createElement('div');
player.className='player';
stage.appendChild(player);

function render(){
  player.style.left = `${px*TILE + TILE/2 -7}px`;
  player.style.top = `${py*TILE + TILE/2 -7}px`;
  posEl.textContent = `${px},${py}`;

  // Start badge on first move
  if(px+py>2 && !badge.classList.contains('show')){
    badge.classList.add('show');
    setTimeout(()=>badge.classList.remove('show'), 1200);
  }
}

function teleportEff(nx, ny){
  player.classList.add('teleport');
  setTimeout(()=>{
    px = nx; py = ny;
    render();
    player.classList.remove('teleport');
  }, 200);
}

function canMove(nx,ny){
  return !(nx<0||ny<0||nx>=COLS||ny>=ROWS) && maze[ny][nx]===0;
}

window.addEventListener('keydown', e => {
  if(Date.now()<cd) return;
  cd = Date.now()+100;
  let dx=0, dy=0;
  if(e.key==='ArrowUp') dy=-1;
  else if(e.key==='ArrowDown') dy=1;
  else if(e.key==='ArrowLeft') dx=-1;
  else if(e.key==='ArrowRight') dx=1;
  else return;

  const nx=px+dx, ny=py+dy;
  if(canMove(nx,ny)) { px=nx; py=ny; render(); }
  else teleportEff(px, py);
});

render();
</script>
</body>
</html>
